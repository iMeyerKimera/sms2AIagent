# =============================================
# Enhanced SMS-to-Cursor AI Agent Configuration
# Django + PostgreSQL System
# =============================================

# === Django Application Environment ===
DJANGO_SETTINGS_MODULE=sms_agent.settings
DEBUG=false
DJANGO_SECRET_KEY=your-super-secure-256-bit-secret-key

# === PostgreSQL Database Configuration ===
DATABASE_NAME=sms_agent_db
DATABASE_USER=sms_agent
DATABASE_PASSWORD=secure_password_123
DATABASE_HOST=database
DATABASE_PORT=5432

# Database connection pool settings
DB_POOL_SIZE=10

# === API Keys (Required) ===
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

OPENAI_API_KEY=your_openai_api_key_here
CURSOR_API_KEY=your_openai_api_key_here

# === Admin Dashboard ===
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password

# === Django Application Settings ===
LOG_LEVEL=INFO
ALLOWED_HOSTS=*
STATIC_URL=/static/
MEDIA_URL=/media/

# === Redis Configuration ===
REDIS_URL=redis://redis:6379/0

# === Gunicorn Configuration ===
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=180
GUNICORN_MAX_REQUESTS=1000

# === Ngrok Configuration ===
NGROK_AUTHTOKEN=your_ngrok_token_here
NGROK_DOMAIN=your-domain.ngrok-free.app

# === Feature Flags ===
ENABLE_VOICE_ASSISTANT=false
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# === Rate Limiting ===
RATE_LIMIT_FREE=10        # per month
RATE_LIMIT_PREMIUM=100    # per month  
RATE_LIMIT_ENTERPRISE=1000 # per month

# === Email Configuration ===
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@company.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@yourcompany.com

# === Slack Integration ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# === Discord Integration ===
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# === Monitoring & Alerting ===
ERROR_RATE_THRESHOLD=0.05
RESPONSE_TIME_THRESHOLD=30
MEMORY_USAGE_THRESHOLD=80

# === Backup Configuration ===
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=7

# === Security Settings ===
SECURE_COOKIES=true
FORCE_HTTPS=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5001

# === Development Overrides ===
# Uncomment these for development/testing
# DEBUG=true
# LOG_LEVEL=DEBUG
# RATE_LIMIT_FREE=1000
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0 