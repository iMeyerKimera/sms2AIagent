# ================================================
# ENHANCED SMS-TO-CURSOR AI AGENT - PRODUCTION CONFIG
# ================================================

# =====================================
# CORE API CREDENTIALS (REQUIRED)
# =====================================

# Twilio Configuration (Required for SMS functionality)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI Configuration (Required for Cursor AI Agent)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
CURSOR_API_KEY=your_openai_api_key_here


# =====================================
# FLASK APPLICATION SETTINGS
# =====================================

# Flask Secret Key (REQUIRED for sessions and admin dashboard)
FLASK_SECRET_KEY=your_super_secret_key_change_in_production_256_bit_key

# Application Environment
FLASK_ENV=production
FLASK_DEBUG=false

# Server Configuration
PORT=5000
HOST=0.0.0.0
WORKERS=3

# =====================================
# ADMIN DASHBOARD CONFIGURATION
# =====================================

# Admin Credentials (Change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password_123!

# Session Configuration
SESSION_TIMEOUT_HOURS=24

# =====================================
# NOTIFICATION SYSTEM CONFIGURATION
# =====================================

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# Discord Integration (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =====================================
# VOICE ASSISTANT CONFIGURATION
# =====================================

# Voice Settings (Optional)
ENABLE_VOICE_ASSISTANT=false
TTS_ENGINE=pyttsx3
STT_ENGINE=google

# =====================================
# ADVANCED FEATURES CONFIGURATION
# =====================================

# Task Router Settings (ENABLED BY DEFAULT)
ENABLE_ADVANCED_ROUTING=true
DEFAULT_USER_TIER=free
RATE_LIMIT_FREE=10
RATE_LIMIT_PREMIUM=50
RATE_LIMIT_ENTERPRISE=unlimited

# Task Categories (automatically detected):
# - coding: Programming tasks, code generation, debugging
# - debug: Error analysis, troubleshooting, issue resolution  
# - design: UI/UX design, architecture planning, system design
# - documentation: Writing docs, README files, API documentation
# - analysis: Data analysis, research, investigation tasks
# - general: General questions, conversations, other tasks

# AI Model Configuration
DEFAULT_AI_MODEL=gpt-4
FALLBACK_AI_MODEL=gpt-3.5-turbo
MAX_TOKENS_FREE=1000
MAX_TOKENS_PREMIUM=4000
MAX_TOKENS_ENTERPRISE=8000

# =====================================
# DATABASE CONFIGURATION
# =====================================

# SQLite Database Paths (Default locations)
TASK_ANALYTICS_DB=task_analytics.db
NOTIFICATIONS_DB=notifications.db

# Database Backup Settings
ENABLE_DB_BACKUP=true
BACKUP_INTERVAL_HOURS=24
MAX_BACKUP_FILES=7

# =====================================
# MONITORING & LOGGING
# =====================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=sms_agent.log
MAX_LOG_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Health Check Settings
HEALTH_CHECK_ENABLED=true
METRICS_RETENTION_DAYS=30

# Alert Thresholds
ERROR_RATE_THRESHOLD=0.1
RESPONSE_TIME_THRESHOLD=30
MEMORY_USAGE_THRESHOLD=80

# =====================================
# EXTERNAL SERVICES (OPTIONAL)
# =====================================

# Ngrok Configuration (Required for permanent domain)
NGROK_AUTHTOKEN=your_ngrok_auth_token_here
NGROK_DOMAIN=your-custom-domain.ngrok-free.app

# Note: To get a permanent domain:
# 1. Go to https://dashboard.ngrok.com/domains
# 2. Create a free static domain (e.g., myapp-12345.ngrok-free.app)
# 3. Set NGROK_DOMAIN to your reserved domain

# Webhook URLs for external integrations
EXTERNAL_WEBHOOK_URL=https://your-external-service.com/webhook

# =====================================
# SECURITY SETTINGS
# =====================================

# Rate Limiting
GLOBAL_RATE_LIMIT=1000
PER_USER_RATE_LIMIT=100
RATE_LIMIT_WINDOW_MINUTES=60

# Request Validation
VALIDATE_TWILIO_SIGNATURES=true
ALLOWED_ORIGINS=*
MAX_REQUEST_SIZE_MB=10

# =====================================
# PERFORMANCE TUNING
# =====================================

# Gunicorn Settings
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=180
GUNICORN_MAX_REQUESTS=1000
GUNICORN_WORKER_CLASS=sync

# AI Processing
AI_REQUEST_TIMEOUT=60
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1

# =====================================
# DEVELOPMENT/TESTING SETTINGS
# =====================================

# Testing Mode (Set to 'true' for development)
TESTING_MODE=false
MOCK_TWILIO=false
MOCK_OPENAI=false

# Debug Features
ENABLE_REQUEST_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true 